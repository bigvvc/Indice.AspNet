<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Indice.Common Class Library</Description>
    <Copyright>Copyright (c) 2018 Indice</Copyright>
    <AssemblyTitle>Indice.Common</AssemblyTitle>
    <VersionPrefix>1.1.0</VersionPrefix>
    <!--<VersionSuffix>beta1</VersionSuffix>-->
    <Authors>c.leftheris</Authors>
    <TargetFrameworks>net452;netstandard1.4;netstandard2.0</TargetFrameworks>
    <AssemblyName>Indice.Common</AssemblyName>
    <AssemblyTitle>Indice.Common</AssemblyTitle>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Indice</RootNamespace>
  </PropertyGroup>
  <PropertyGroup Label="Package">
    <PackageId>Indice.Common</PackageId>
    <PackageTags>AspNet;Api;Utilities</PackageTags>
    <PackageReleaseNotes>Support .NET 4.5.2 and .NET Standard 1.4</PackageReleaseNotes>
    <PackageIconUrl>https://raw.githubusercontent.com/indice-co/Indice.AspNet/master/icon/icon-128.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/indice-co/Indice.AspNet</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/indice-co/Indice.AspNet/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/indice-co/Indice.AspNet</RepositoryUrl>
    <Company>Indice</Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'net452'">
    <AssemblyTitle>Indice.Common .NET Framework 4.5.2</AssemblyTitle>
    <DefineConstants>$(DefineConstants);NET452</DefineConstants>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.4'">
    <AssemblyTitle>Indice.Common .NET Standard 1.4</AssemblyTitle>
    <DefineConstants>$(DefineConstants);NETSTANDARD14;</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net452|AnyCPU'">
    <NoWarn>1701;1702;1705;1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup>
    <RootNamespace>Indice</RootNamespace>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net452'">
    <Reference Include="System" />
    <Reference Include="System.Core" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.4'">
    <PackageReference Include="System.ComponentModel.TypeConverter" Version="4.3.0" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>
</Project>
